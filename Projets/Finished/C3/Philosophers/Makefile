NAME = philo

#-------------------------------------------------------------- COMPILATION ---#
CC = cc
CFLAGS = -g -Wall -Werror -Wextra -pthread
#------------------------------------------------------------------------------#

#------------------------------------------------------------------- HEADER ---#
HDR = philo.h
#------------------------------------------------------------------------------#

#---------------------------------------------------------------------- SRC ---#
SRC_PATH = src
SRC =																		\
		$(SRC_PATH)/clean.c													\
		$(SRC_PATH)/get.c													\
		$(SRC_PATH)/init.c													\
		$(SRC_PATH)/main.c													\
		$(SRC_PATH)/monitoring.c											\
		$(SRC_PATH)/philo_tab.c												\
		$(SRC_PATH)/routine.c												\
		$(SRC_PATH)/set.c													\
		$(SRC_PATH)/utils.c													\
#------------------------------------------------------------------------------#

OBJ = $(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJ) $(HDR)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

clean:
	rm -rf $(OBJ)

fclean: clean
	rm -rf $(NAME)

re : fclean all

.PHONY: all clean fclean re