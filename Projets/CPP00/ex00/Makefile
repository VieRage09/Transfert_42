NAME	= megaphone

#---------------------COMPILATION-----------------------#
CC		= c++
CFLAGS	= -Wall -Werror -Wextra -std=c++98
#-------------------------------------------------------#

#---------------------SOURCES---------------------------#
SRC = megaphone.cpp
#-------------------------------------------------------#

#---------------------OBJETS----------------------------#
OBJ = $(SRC:.cpp=.o)
#-------------------------------------------------------#

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $? -o $@

$(OBJ): $(SRC)
	$(CC) -c $? -o $@
clean:
	rm -rf $(OBJ)

fclean: clean
	rm -rf $(NAME)

re: fclean all

.PHONY: all clean fclean re